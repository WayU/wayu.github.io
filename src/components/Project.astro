    .main-stage {
        position: relative;
        border-radius: 8px;
        overflow: hidden;
        border: 1px solid var(--border);
        aspect-ratio: 16/9; 
        background: #000;
    }

    .image-badge {
        position: absolute; bottom: 12px; right: 12px;
        background: rgba(0,0,0,0.75); color: white;
        padding: 4px 8px; border-radius: 4px;
        font-size: 0.75rem; z-index: 10; font-family: var(--font-mono);
