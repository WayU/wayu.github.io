---
export interface ImageItem {
    src: string;
    caption?: string;
    alt?: string;
}

export interface VideoItem {
    id: string; 
    caption?: string;
}

interface Props {
    title: string;
    description: string;
    tstack: string[];
    repoLink?: string;
    demoLink?: string;
    images?: ImageItem[];
    videos?: VideoItem[];
}

const { title, description, tstack, repoLink, demoLink, images, videos } = Astro.props;

const hasMultipleImages = images && images.length > 1;
const hasMultipleVideos = videos && videos.length > 1;

const uniqueID = crypto.randomUUID();
---

<article class="prj-card" id={`card-${uniqueID}`}>
    
    <header class="card-header">
        <div class="header-top">
            <h3>{title}</h3>
            <div class="links">
                {demoLink && <a href={demoLink} target="_blank" rel="noopener noreferrer">Live ‚Üó</a>}
                {repoLink && <a href={repoLink} target="_blank" rel="noopener noreferrer">Code ‚Üó</a>}
            </div>
        </div>
        <div class="tags">
            {tstack.map(tag => <span class="tag">{tag}</span>)}
        </div>
    </header>

    <p class="description">{description}</p>
    
    <div class="media-stack">
        
        { videos && videos.length > 0 && (
            <div class="video-group">
                <div class="video-wrapper">
                    <iframe 
                        id={`vid-frame-${uniqueID}`}
                        src={`https://www.youtube-nocookie.com/embed/${videos[0].id}`}
                        title={videos[0].caption || title}
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                        allowfullscreen
                        loading="lazy">
                    </iframe>
                </div>
                
                <p class="caption" id={`vid-caption-${uniqueID}`}>
                    {videos[0].caption}
                </p>

                {hasMultipleVideos && (
                    <div class="video-controls">
                        {videos.map((vid, index) => (
                            <button 
                                class={`vid-btn ${index === 0 ? 'active' : ''}`}
                                data-vid-id={vid.id}
                                data-vid-caption={vid.caption || ''}
                                aria-label={`Play video ${index + 1}`}
                            >
                                <svg width="12" height="12" viewBox="0 0 24 24" fill="currentColor"><path d="M8 5v14l11-7z"/></svg>
                                <span>Video {index + 1}</span>
                            </button>
                        ))}
                    </div>
                )}
            </div>
        )}

        { images && images.length > 0 && (
            <div class="gallery-group">
                
                <div class="main-stage">
                    {hasMultipleImages && (
                        <div class="image-badge">
                            <span class="curr-index">1</span> / {images.length}
                        </div>
                    )}
                    
                    <div class="slides-track" id={`track-${uniqueID}`}>
                        {images.map((img, index) => (
                            <button 
                                class="slide-btn" 
                                aria-label={`Expand image ${index + 1}`}
                                data-full-src={img.src}
                                data-caption={img.caption || ''}
                            >
                                <img 
                                    src={img.src} 
                                    alt={img.alt || img.caption || `Screenshot ${index + 1}`} 
                                    loading="lazy" 
                                    decoding="async"
                                />
                            </button>
                        ))}
                    </div>
                </div>

                <p class="caption center" id={`img-caption-${uniqueID}`}>
                    {images[0].caption || '\u00A0'} 
                </p>

                {hasMultipleImages && (
                    <div class="thumbs-track">
                        {images.map((img, index) => (
                            <button 
                                class={`thumb-btn ${index === 0 ? 'active' : ''}`} 
                                aria-label={`Go to image ${index + 1}`}
                                data-index={index}
                            >
                                <img src={img.src} alt="" loading="lazy" decoding="async" />
                            </button>
                        ))}
                    </div>
                )}
            </div>
        )}
    </div>
</article>

<dialog class="image-lightbox">
    <div class="lightbox-wrapper">
        <button class="close-lightbox" aria-label="Close">‚úï</button>
        <img src="" alt="Full preview" class="lightbox-img" />
        <p class="lightbox-caption"></p> 
    </div>
</dialog>

<script define:vars={{ uniqueID }}>
    (function() {
        const card = document.getElementById(`card-${uniqueID}`);
        if (!card) return;

        const vidBtns = card.querySelectorAll('.vid-btn');
        const vidFrame = document.getElementById(`vid-frame-${uniqueID}`);
        const vidCaption = document.getElementById(`vid-caption-${uniqueID}`);

        if (vidBtns.length > 0 && vidFrame) {
            vidBtns.forEach(btn => {
                btn.addEventListener('click', () => {
                    vidBtns.forEach(b => b.classList.remove('active'));
                    btn.classList.add('active');

                    const newId = btn.getAttribute('data-vid-id');
                    vidFrame.src = `https://www.youtube-nocookie.com/embed/${newId}`;

                    if (vidCaption) {
                        vidCaption.textContent = btn.getAttribute('data-vid-caption');
                    }
                });
            });
        }

        const track = card.querySelector('.slides-track');
        const thumbs = card.querySelectorAll('.thumb-btn');
        const badgeIndex = card.querySelector('.curr-index');
        const imgCaption = document.getElementById(`img-caption-${uniqueID}`);
        const slides = card.querySelectorAll('.slide-btn');
        
        if (!track || slides.length === 0) return;

        thumbs.forEach(btn => {
            btn.addEventListener('click', () => {
                const index = parseInt(btn.getAttribute('data-index'));
                const scrollAmount = track.clientWidth * index;
                track.scrollTo({ left: scrollAmount, behavior: 'smooth' });
            });
        });

        let isScrolling;
        track.addEventListener('scroll', () => {
            window.clearTimeout(isScrolling);
            
            isScrolling = setTimeout(() => {
                const index = Math.round(track.scrollLeft / track.clientWidth);
                
                if (badgeIndex) badgeIndex.textContent = index + 1;
                
                thumbs.forEach((t, i) => {
                    t.classList.toggle('active', i === index);
                });

                if (imgCaption && slides[index]) {
                    const txt = slides[index].getAttribute('data-caption');
                    imgCaption.textContent = txt || '\u00A0'; 
                }

            }, 50); 
        }, { passive: true });
    })();
</script>

<script>
    function initLightbox() {
        if (window.lightboxInitialized) return;
        
        const dialog = document.querySelector('dialog.image-lightbox');
        if (!dialog) return;

        const dialogImg = dialog.querySelector('.lightbox-img');
        const dialogCap = dialog.querySelector('.lightbox-caption');
        const closeBtn = dialog.querySelector('.close-lightbox');

        document.body.addEventListener('click', (e) => {
            const btn = e.target.closest('.slide-btn');
            if (btn) {
                const src = btn.getAttribute('data-full-src');
                const cap = btn.getAttribute('data-caption');
                
                if (src) {
                    dialogImg.setAttribute('src', src);
                    if (dialogCap) dialogCap.textContent = cap || '';
                    dialog.showModal();
                    document.body.style.overflow = 'hidden'; 
                }
            }
        });

        const close = () => {
            dialog.close();
            document.body.style.overflow = '';
            setTimeout(() => {
                dialogImg.setAttribute('src', '');
                if (dialogCap) dialogCap.textContent = '';
            }, 200);
        };

        closeBtn?.addEventListener('click', close);
        dialog.addEventListener('click', (e) => { if (e.target === dialog) close(); });
        
        window.lightboxInitialized = true;
    }

    initLightbox();
    document.addEventListener('astro:page-load', initLightbox);
</script>

<style>
